<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LangostaAhumada.Presupuesto_LangostaAhumada"
             Title="Presupuesto_LangostaAhumada">
    <VerticalStackLayout>
        
        <Label Text="LA LANGOSTA AHUMADA" FontSize="30"  Padding="0,10" VerticalOptions="Center" HorizontalOptions="Center" />
        <Label Text="¡Realice sus cotizaciones!" FontSize="18" VerticalOptions="Center" HorizontalOptions="Center" />


        <Label Text="Ingrese el número de platos:" Padding="0,20" VerticalOptions="Center" HorizontalOptions="Center" />
        <Entry x:Name="entry1" HorizontalOptions="Center" Placeholder="Numero de platos"/>


        <Label Text="Presupuesto total:" Padding="0,20" VerticalOptions="Center" HorizontalOptions="Center" />
        <Entry x:Name="entryPresupuesto"  HorizontalOptions="Center"/>

        <Button Text="Calcular presupuesto!" Margin="0,10" Clicked="Button_Clicked" VerticalOptions="Center" HorizontalOptions="Center"/>

    </VerticalStackLayout>
</ContentPage>